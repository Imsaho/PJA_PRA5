drop table OFERTY;

create table OFERTY (
  OFFERID integer not null generated by default as identity,
  LOKALIZACJA varchar(20) not null,
  KRAJ varchar(50),
  DATA_WYJAZDU date,
  DATA_POWROTU date,
  MIEJSCE varchar(255),
  CENA  real,
  WALUTA varchar(10) not null,
  PRIMARY KEY(OFFERID)
);

